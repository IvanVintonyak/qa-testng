<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Test Suite Utils">
    <test name="GroupTest">
        <groups>
            <define name="all">
                <include name="smoke"/>
                <include name="regression"/>
            </define>

            <run>
                <include name="all"/>
            </run>
        </groups>

        <classes>
            <class name="ua.it.testing.GroupTest"/>
            <class name="ua.it.testing.FirstTest"/>
            <class name="ua.it.testing.SecondTest"/>
        </classes>
    </test>
</suite>
